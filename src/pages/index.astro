---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import GeneratedTable from '../components/GeneratedTable.astro';
---

<Layout title='Symbolic Math Syntax Comparison'>
    <main>
        <h1>Symbolic Math Syntax Comparison</h1>
        <p>
            This table shows a comparison of syntax for common symbolic math operations across different software systems. The
            content is automatically extracted from the project's README.md file.
        </p>

        <div class='table-container'>
            <GeneratedTable />
        </div>

        <style is:global>
            .table-container {
                overflow-x: auto;
                margin-top: 2em;
                margin-bottom: 2em;
                border: 1px solid #000000;
                border-radius: 4px;
            }

            .table-container table {
                width: auto;
                min-width: max-content;
                border-collapse: collapse;
                margin-bottom: 1em;
                font-size: 0.9em;
            }

            .table-container th,
            .table-container td {
                border: 1px solid #000000;
                padding: 8px 12px;
                text-align: left;
                vertical-align: top;
                white-space: nowrap;
            }

            .table-container th {
                background-color: #ffffff;
                font-weight: bold;
            }

            .table-container td code,
            .table-container td pre {
                padding: 0.1em 0.4em;
                border-radius: 3px;
                font-size: 0.95em;
            }
            .table-container td pre {
                display: block;
                padding: 0.5em;
                margin: 0;
                white-space: pre;
            }

            .table-container .katex {
                font-size: 1.1em;
            }
        </style>
    </main>
</Layout>
